{
  "name": "catala-website",
  "reason": { "react-jsx": 3 },
  "bsc-flags": ["-bs-super-errors", "-bs-no-version-header"],
  "sources": {
    "dir": "src/",
    "subdirs": true,
    "generators": [
      {
        "name": "gen-tailwind",
        "edge": ["css/tailwind.css", ":", "css/index.css"]
      }
    ]
  },
  "generators": [
    {
      "name": "gen-tailwind",
      "command": "tailwindcss build $in -o $out -c ../../src/css/tailwind.config.js"
    }
  ],
  "package-specs": [
    {
      "module": "commonjs",
      "in-source": true
    }
  ],
  "suffix": ".bs.js",
  "namespace": true,
  "bs-dependencies": [
    "reason-react",
    "decco"
  ],
  "ppx-flags": [
    "decco/ppx",
    ["@greenlabs/res-tailwindcss/ppx", "--path src/css/tailwind.css"]
  ],
  "refmt": 3
}
